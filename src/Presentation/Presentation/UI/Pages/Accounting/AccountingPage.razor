@page "/AccountingPage"
@rendermode InteractiveServer

<MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">

    <MudTabPanel Text="Кошельки">
        <MudTable Items="@wallets" Dense="true" Hover="true" Bordered="true" Striped="true">

            <HeaderContent>
                <MudTh>Номер кошелька</MudTh>
                <MudTh>Название кошелька</MudTh>
                <MudTh Align="Right">Сумма</MudTh>
            </HeaderContent>

            <RowTemplate Context="w">
                <MudTd DataLabel="Номер кошелька">@w.Number</MudTd>
                <MudTd DataLabel="Название кошелька">@w.Name</MudTd>
                <MudTd DataLabel="Сумма" Align="Right">@($"{w.Balance:N2} ₴")</MudTd>
            </RowTemplate>
        </MudTable>
    </MudTabPanel>


    <MudTabPanel Text="Транзакции">
        <TransactionsPanel></TransactionsPanel>
    </MudTabPanel>

</MudTabs>

